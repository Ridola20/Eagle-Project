#: import get_color_from_hex kivy.utils.get_color_from_hex

<MainScreen>:
    MDScrollView:
        do_scroll_x: False
        do_scroll_y: True
        size_hint: (1,1)

        MDBoxLayout:
            size_hint_y: None
            orientation: "vertical"
            #padding: 10
            orientation: 'vertical'
            height: 320
            spacing: 10

            MDCard:
                orientation: "horizontal"
                size_hint_y: .06
                padding: 0
                elevation: 1.5
                radius: 0
                pos_hint: {"x": 0, "y": .93}
                MDBoxLayout:
                    size_hint_x: 1
                    size_hint_y: .34
                    id: "one"
                    MDIconButton:
                        icon_size: 30
                        icon: "arrow-left"
                        # on_press: 

                MDBoxLayout:
                    size_hint_x: 1
                    size_hint_y: .33
                    padding: 35, 0, 0, 0
                    id: "one"
                    MDIconButton:
                        icon: "sort-alphabetical-ascending"
                        padding: 0
                        icon_size: 30
                        on_press: self.icon = "sort-numeric-ascending" if self.icon == "sort-alphabetical-ascending" else "sort-alphabetical-ascending"

                MDBoxLayout:
                    size_hint_x: 1
                    padding: 85, 0, 0, 0
                    size_hint_y: .33
                    MDIconButton:
                        icon_size: 30
                        icon: "selection-multiple"
                        pos_hint: {"x": 0, "y": 0}
                        on_press: self.icon = "sticker-check" if self.icon == "selection-multiple" else "selection-multiple"
            MDBoxLayout:
                orieantation: "horizontal"
                size_hint_y: .07
                padding: 20, 5, 20, 5
                spacing: 15
                MDLabel:
                    text: "1"
                    halign: "left"
                    valign: "center"
                    font_size: 23
                    size_hint_x: .1
                MDLabel:
                    text: "Sanusi Ridwan Olaoluwa"
                    halign: "left"
                    valign: "center"
                    font_size: 23
                    size_hint_x: .7

                MDTextField:
                    text: "0"
                    size_hint_x: .2
                    padding: 0
                    #pos_hint: {"x": 0, "y": .9}

            MDBoxLayout:
                orieantation: "horizontal"
                size_hint_y: .07
                padding: 20, 5, 20, 5
                spacing: 15
                MDLabel:
                    text: "2"
                    halign: "left"
                    valign: "center"
                    font_size: 23
                    size_hint_x: .1
                MDLabel:
                    text: "Omoniyi Ibrahim Ayomide"
                    halign: "left"
                    valign: "center"
                    font_size: 23
                    size_hint_x: .7

                MDTextField:
                    text: "0"
                    size_hint_x: .2
                    padding: 0
                    #pos_hint: {"x": 0, "y": .9}



            MDFloatingActionButton:
                icon: "arrow-right"
                theme_icon_color: "Custom"
                md_bg_color: get_color_from_hex("#000000")
                pos_hint: {"x": .82, "y": 0}
